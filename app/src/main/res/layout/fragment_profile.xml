<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/profile_name_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/profile_name_text"
        android:hint="@string/registration_hint_name"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/profile_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/profile_name_tag"
        android:hint="@string/registration_hint_name"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/profile_address_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/profile_address_text"
        android:layout_below="@id/profile_name_text"
        android:hint="@string/registration_hint_name"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/profile_address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/profile_address_tag"
        android:layout_below="@id/profile_name_text"
        android:hint="@string/registration_hint_address"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/profile_age_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/profile_address_text"
        android:text="@string/profile_age_text"
        android:maxLines="1"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />
    <TextView
        android:id="@+id/profile_age_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/profile_address_tag"
        android:layout_below="@id/profile_address_text"
        android:hint="@string/registration_hint_age"
        android:maxLines="1"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/profile_creation_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/profile_age_text"
        android:text="@string/profile_created_text"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/profile_creation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/profile_age_text"
        android:hint="@string/registration_hint_creation_time"
        android:layout_toEndOf="@id/profile_address_tag"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

</RelativeLayout>